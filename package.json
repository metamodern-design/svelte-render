{
  "name": "@metamodern/svelte-render",
  "version": "1.0.3",
  "description": "Like Sapper, but for Jamstack (serverless) apps",
  "author": "Daniel C. Narey <os@metamodern.design>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/metamodern-design/svelte-render"
  },
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/esm.mjs",
  "cli": "dist/cli.js",
  "cliLegacy": "dist/cli-legacy.cjs",
  "bin": {
    "svelte-render": "dist/cli.js",
    "svelte-render-legacy": "dist/cli-legacy.cjs"
  },
  "exports": {
    ".": "./dist/esm.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "del dist/*",
    "build": "rollup -c",
    "lint": "eslint --fix src",
    "release": "np",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "npm run build && ava test/*.js",
    "update": "updtr"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "clean-stack": "^2.2.0",
    "del": "^5.1.0",
    "fs-extra": "^9.0.0",
    "mri": "^1.1.5",
    "ora": "^4.0.4",
    "rollup": "^2.10.7",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-svelte": "^5.2.2",
    "rollup-plugin-terser": "^5.3.0",
    "svelte": "^3.22.3",
    "uid": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "ava": "^3.8.2",
    "core-js": "^3.6.5",
    "del-cli": "^3.0.1",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-plugin-types": "^1.0.2",
    "jsdom": "^16.2.2",
    "np": "^5.2.1",
    "rollup-plugin-preserve-shebangs": "^0.2.0",
    "tinydate": "^1.2.0",
    "updtr": "^3.1.0"
  },
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "svelte",
    "render",
    "ssr",
    "hydrate",
    "hydration",
    "Jamstack",
    "static",
    "serverless",
    "Netlify",
    "Zeit",
    "Vercel"
  ],
  "ava": {
    "nodeArguments": [
      "--experimental-modules"
    ]
  }
}
